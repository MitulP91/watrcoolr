<div class="room" id="room-<%= @room.id %>">
  <!-- Contains all past messages -->
  <div id="message-box">
    
  </div>

  <!-- Box to input messages -->
  <div id="input-box">
    <%= form_for @text_message, url: '/message/create' do |f| %>
      <%= f.text_field :msg_content %>
      <%= hidden_field_tag 'type', 'text' %>
      <%= f.submit %>
    <% end %>
  </div>
</div>