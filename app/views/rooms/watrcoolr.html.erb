<div class="room" id="room-<%= @room.id %>">
  <!-- Contains all past messages -->
  <div id="message-box">
    
  </div>

  <!-- Box to input messages -->
  <div id="input-box">
    <%= form_for @text_message, remote: true, url: '/messages' do |f| %>
      <%= f.text_field :msg_content %>
      <%= hidden_field_tag 'self_destruct', false %>
      <%= hidden_field_tag 'self_destruct_time', 'tomorrow' %>
      <%= hidden_field_tag 'self_destruct_type', 'blah' %>
      <%= hidden_field_tag 'type', '' %>
      <%= f.submit %>
    <% end %>
  </div>
</div>