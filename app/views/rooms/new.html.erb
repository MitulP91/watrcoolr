<div class="create-room text-center">
  <h1>Create New Room</h1>
  <hr>
  <%= form_for @room, url: '/rooms/create' do |f| %>
    <div>
      <%= label_tag :name %>
      <br>
      <%= text_field_tag :name %>
    </div>
    <div>
      <%= label_tag :description %>
      <br>
      <%= text_area_tag :description %>
    </div>
    <div>
      <%= label_tag :private %>
      <br>
      <%= radio_button_tag :private, true, :checked => true %> Yes
      <%= radio_button_tag :private, false %> No
    </div>
      <%= hidden_field_tag :message_scrub , value: false %>
      <br>
    <div>
      <%= label_tag :voting %>
      <br>
      <%= radio_button_tag :voting, true, :checked => true %> Yes
      <%= radio_button_tag :voting, false %> No
    </div>
  <!--   <div>
      <%= label_tag :mms %>
      <%= radio_button_tag :mms, true, :checked => true %> Yes
      <%= radio_button_tag :mms, false %> No
    </div> -->
    <hr>
    <div>
      <%= submit_tag "Create Room", class: 'btn btn-default'%>
      <button class="btn btn-default">
      <%= link_to "Back", controller: "home", action: "index"%>
    </button>
    </div>
    
  <% end %>
  
</div>