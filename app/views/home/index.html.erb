<%= render "test/nav" %>
<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-2">
        <h2>Profile</h2>
        <hr>
        <% if user_signed_in? %>
          <h4><%= @user.username %> </h4>
          <p>Number of Rooms: <%= @user.rooms.length %></p>
          <p>Messages Sent: <%= @user.messages.length %></p>
        <% end %>
    </div>
    <div class="col-md-3 col-md-offset-1">
      <h2>Rooms</h2>
      <hr>
      <div class="rooms">
        <% if @rooms.length > 0 %>
          <ul id="room-list" class="roomlist list list-unstyled">
            <% @rooms.each do |room| %>
              <li>
                <h4><%= link_to room.name, room_path(room) %></h4>
                <p>Population: <%= room.users.length %></p>
              </li>
              <hr>
            <% end %>
          </ul>
        <% else %>
          <ul id="room-list-empty" class="roomlist"> 
            <li>No rooms exist yet. Create one!</li> 
          </ul>
        <% end %>
      </div>
    </div>
  </div><!-- /.row -->
</div><!-- /.container -->


